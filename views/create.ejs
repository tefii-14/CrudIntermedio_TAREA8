<%- include('./partials/header') %>

<div class="mt-3">
  <div class="alert alert-warning">
    <span>Complete los datos solicitados</span>
  </div>

  <form action="/create" id="formulario-registro" autocomplete="off" method="post">
    <div class="card">
      <div class="card-header"><span>Campos requeridos</span></div>
      <div class="card-body">
        <div class="row g-2">
          <div class="col-md-12 mb-2">
            <div class="form-floating">
              <select name="idmarca" id="idmarca" class="form-select" required>
                <option value="" selected disabled>Seleccione</option>
                <% marcas.forEach(marca => { %>
                  <option value="<%= marca.idmarca %>"><%= marca.nombre %></option>
                <% }) %>                
              </select>
              <label for="idmarca" class="form-label">Marca del modelo</label>
            </div>
          </div>
        </div>

        <div class="row g-2">
          <div class="col-md-8 mb-2">
            <div class="form-floating">
              <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del modelo" required>
              <label for="nombre" class="form-label">Nombre del modelo</label>
            </div>
          </div>
          <div class="col-md-4 mb-2">
            <div class="form-floating">
              <input type="number" class="form-control text-end" id="anio" name="anio" placeholder="Año del modelo" required>
              <label for="anio" class="form-label">Año</label>
            </div>
          </div>
        </div>
      </div> <!-- ./card-body -->
      <div class="card-footer text-end">
        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
        <a href="/" class="btn btn-sm btn-secondary">Cancelar</a>
      </div><!-- ./card-footer -->
    </div><!-- ./card -->
  </form>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const formulario = document.querySelector("#formulario-registro")

    formulario.addEventListener("submit", (event) =>{
      event.preventDefault()

      Swal.fire({
        title:  'Carros Gestión',
        text:   '¿Está seguro de proceder?',
        icon: 'question',
        footer:   'Gestión de Carros',
        confirmButtonText: 'Aceptar',
        confirmButtonColor: '#2980b9',
        showCancelButton: true,
        cancelButtonText: 'Cancelar',
        cancelButtonColor: '#c0392b'
      }).then((result) => {
        if (result.isConfirmed){
          formulario.submit()
        }
      })
    })
  })
</script>

<%- include('./partials/footer') %>